module contador
  #(parameter fin_cuenta=20)
  (input wire reset,
   input wire clk,
   output reg [WIDTH-1:0] count);
   
  `include "MathFun.vh"
  parameter WIDTH = CLogB2(fin_cuenta);

  always @(posedge clk or posedge reset) begin
    if (reset) begin
      count <= 0;
    end else begin
      if (count == fin_cuenta - 1) begin
        count <= 0;
      end else begin
        count <= count + 1;
      end
    end
  end
 endmodule
 