module alu_tb;
    
    // Se√±ales
    logic [31:0] SrcA, SrcB;
    logic [1:0] ALUControl;
    logic [31:0] ALUResult;
    logic [3:0] ALUFlags;
    logic clk;
    
    // Instancia de la ALU
    alu alu_inst (
        .SrcA(SrcA),
        .SrcB(SrcB),
        .ALUControl(ALUControl),
        .ALUResult(ALUResult),
        .ALUFlags(ALUFlags)
    );
	 
	 initial begin
		SrcA = 32'h0000000A
		SrcB = 32'h00000005
		ALUControl = 2b'00;
		#20;
		ALUControl = 2b'01;
		#20;
		ALUControl = 2b'10;
		#20;
		ALUControl = 2b'11;
	 end
	 
endmodule