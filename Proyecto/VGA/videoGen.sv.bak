//Metodo de dibujado
module videoGen(input logic [9:0] x, y, input logic clk, output logic [7:0] r, g, b);
logic pixel, inrect;
// Dado una posicion en pantalla, 
// Busca la posicion equivalente en el character ROM
chargenrom chargenromb(clk, y[8:3] + 8'd65, x[2:0], y[2:0], x, y, pixel);
assign {r, b} = (y == 0) ? {{8{pixel}},8'h00} : {8'h00,{8{pixel}}}; //Aqui esta la condicion para dibujar en azul o rojo
endmodule