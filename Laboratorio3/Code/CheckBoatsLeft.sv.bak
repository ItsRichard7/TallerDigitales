module CheckBoatsLeft (
    input reg [4:0] board [4:0], // Tablero 5x5 de entrada
    output reg [4:0] numRowsWithOnes // Número de filas con al menos un "1"
);

    integer count;
    reg [4:0] columnHasOne;

    // Contar el número de filas con al menos un "1" en cada columna
    always_comb begin
        for (int col = 0; col < 5; col++) begin
            columnHasOne[col] = 0;
            for (int row = 0; row < 5; row++) begin
                if (board[row][col] == 1) begin
                    columnHasOne[col] = 1;
                    break;
                end
            end
        end
    end

    // Calcular el número de filas con al menos un "1" en cada columna
    always_comb begin
        count = 0;
        for (int row = 0; row < 5; row++) begin
            if (columnHasOne == 1) begin
                count++;
            end
        end
        numRowsWithOnes = count;
    end

endmodule